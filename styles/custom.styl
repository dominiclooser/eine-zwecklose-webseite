.page-header
    padding-top: var(--two-units)
    padding-bottom: var(--two-units)
    background-image: url('/images/crazy.jpg')
    text-align: center

.page-title
    font-size: var(--l)
    font-style: italic
    // background: rgba(256, 256, 256, 0.9)
    background: primary-color
    padding: 5px 8px
    display: inline
    color: white
    transform: rotate(13deg)

main
    img     
        width: 100%
        margin-bottom: var(--unit)

section, article, sequence-animation
    padding: var(--two-units) 0

#intro
    @extends .spaced-paragraphs

#essenz
    p
        font-family: header-font
        font-style: italic
        font-size: 80px
        font-weight: bold
        text-transform: uppercase
        line-height: 1.1

#pandas-pasta
    header
        margin-bottom: var(--semi-unit)
    h2
        font-style: italic
        text-transform: uppercase
        border-bottom: 2px solid dark
        display: inline
        
        
    p
        margin-bottom: calc(0.5*var(--semi-unit))

.button-section
    background-color: primary-color
    display: flex
    justify-content: center
    align-items: center

.fancy-button
    display: inline-block
    width: calc(2*var(--four-units))
    height: @width
    border-radius: 50%
    cursor: pointer
    padding: 0.5em 1em
    color: primary-color
    font-family: body-font
    font-size: var(--xl) 
    font-style: italic
    border: none
    box-shadow: 5px 5px 1px 1px rgba(0,0,0,0.7)
    background-color: secondary-color
    &:focus
        outline: none

#neon-shizzle
    background-color: #010a00
    background-image: url("https://www.transparenttextures.com/patterns/3px-tile.png")
    position: fixed
    top: 0
    left: 0
    height: 100%
    width: 100%
    align-items: center
    text-align: center
    justify-content: center
    display: none
    p
        text-transform: uppercase
        font-size: 10vw
        color: #fff
        text-shadow:
            0 0 5px #fff,
            0 0 10px #fff,
            0 0 20px #fff,
            0 0 40px #0ff,
            0 0 80px #0ff,
            0 0 90px #0ff,
            0 0 100px #0ff,
            0 0 150px #0ff
    button
        position: absolute
        top: var(--unit)
        right: var(--unit)
        color: white
        border: none 
        background-color: inherit
        cursor: pointer
        font-size: var(--l)
        font-family: inherit
        

#more, #activities
    h2  
        display: inline-block
        margin-bottom: var(--semi-unit)
        font-style: italic
        border-bottom: 1px solid dark

footer
    border-top: 1px solid dark
    padding-top: var(--semi-unit)
    font-family: header-font
    margin-bottom: var(--unit)
    font-size: var(--s)

.clickable
    cursor: pointer
    &::before
        content: 'â†’ '

a
    @extends .clickable



.text-button
    font-family: inherit
    font-size: inherit
    background: inherit 
    font-style: inherit
    font-weight: inherit 
    border: 1px solid dark
    border-radius: 0.5em
    padding: 2px 4px
    margin-right: 2px
    &:hover
        cursor: pointer
        background: dark
        color: white

sequence-animation
    font-family: number-font
    color: white
    display: flex
    align-items: center
    justify-content: center
    font-size: var(--xxxxxl)
    padding: var(--two-units)
    background: url('/images/orange.png')
.page-header
    padding: var(--semi-unit) 0 var(--unit) 0
    h1
        text-transform: uppercase
        font-style: italic
        font-size: var(--xxl)
        line-height: 1.3
        display: inline
        font-weight: bold
        border-bottom: 3px solid dark
    z-index: -1
        
@keyframes turn
    100% 
        transform: rotate(180deg)

main
    img     
        width: 100%
        margin-bottom: var(--unit)

main > section, article
    margin-bottom: var(--unit)

#intro
    font-style: italic
    @extends .spaced-paragraphs

#die-essenz-des-lebens
    order: -1
    margin-top: var(--unit)
    h2
        font-weight: normal
        // font-style: italic
        font-family: body-font
        font-size: var(--m)
        margin-bottom: var(--semi-unit)
        text-transform: uppercase

    p
        font-family: header-font
        font-style: italic
        font-size: 80px
        font-weight: bold
        text-transform: uppercase
        line-height: 1.1

#pandas-pasta
    margin-top: var(--unit)
    header
        margin-bottom: var(--semi-unit)
    h2
        font-style: italic
        text-transform: uppercase
        border-bottom: 2px solid dark
        display: inline
        
    section 
        margin-bottom: calc(0.5*var(--semi-unit))

#button-section
    text-align: center
    padding: var(--double-unit) 0
    margin: calc(1*var(--double-unit)) 0

#neon-shizzle
    background-color: #010a00
    background-image: url("https://www.transparenttextures.com/patterns/3px-tile.png")
    position: fixed
    top: 0
    left: 0
    height: 100%
    width: 100%
    align-items: center
    text-align: center
    justify-content: center
    display: none
    p
        text-transform: uppercase
        font-size: 10vw
        color: #fff
        text-shadow:
            0 0 5px #fff,
            0 0 10px #fff,
            0 0 20px #fff,
            0 0 40px #0ff,
            0 0 80px #0ff,
            0 0 90px #0ff,
            0 0 100px #0ff,
            0 0 150px #0ff
    button
        position: absolute
        top: var(--unit)
        right: var(--unit)
        color: white
        border: none 
        background-color: inherit
        cursor: pointer
        font-size: var(--l)
        font-family: inherit
        

#more, #activities
    h2  
        display: inline-block
        margin-bottom: var(--semi-unit)
        font-style: italic
        border-bottom: 1px solid dark

footer
    border-top: 1px solid dark
    padding-top: var(--semi-unit)
    font-family: header-font
    margin-bottom: var(--unit)
    font-size: var(--s)

.clickable
    cursor: pointer
    &::before
        content: 'â†’ '

a
    @extends .clickable

#neon-shizzle-button
    display: inline-block
    width: 200px
    height: 200px
    border-radius: 50%
    cursor: pointer
    padding: 0.5em 1em
    background-color: #FE504E
    color: white
    font-family: body-font
    font-size: var(--l) 
    font-style: italic
    border: none
    box-shadow: 5px 5px 1px 1px rgba(0,0,0,0.7)
    &:hover
        background-color: dark

.text-button
    font-family: inherit
    font-size: inherit
    background: inherit 
    font-style: inherit
    font-weight: inherit 
    border: 1px solid dark
    border-radius: 0.5em
    padding: 2px 4px
    margin-right: 2px
    &:hover
        cursor: pointer
        background: dark
        color: white